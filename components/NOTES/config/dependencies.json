{
  "dependencies": {
    "core": {
      "react": {
        "version": "^18.2.0",
        "description": "React library for building user interfaces",
        "required": true
      },
      "react-dom": {
        "version": "^18.2.0",
        "description": "React DOM rendering",
        "required": true
      },
      "@tanstack/react-query": {
        "version": "^5.0.0",
        "description": "Data fetching and caching library",
        "required": true,
        "usage": "API calls, caching, and state management"
      }
    },
    "ui": {
      "lucide-react": {
        "version": "^0.300.0",
        "description": "Icon library",
        "required": true,
        "usage": "All icons throughout the application"
      },
      "clsx": {
        "version": "^2.0.0",
        "description": "Utility for constructing className strings",
        "required": true
      },
      "tailwind-merge": {
        "version": "^2.0.0",
        "description": "Merge Tailwind CSS classes without conflicts",
        "required": true
      },
      "tailwindcss": {
        "version": "^3.4.0",
        "description": "Utility-first CSS framework",
        "required": true
      }
    },
    "validation": {
      "zod": {
        "version": "^3.22.0",
        "description": "TypeScript-first schema validation",
        "required": true,
        "usage": "API request/response validation"
      }
    },
    "backend": {
      "express": {
        "version": "^4.18.0",
        "description": "Web application framework",
        "required": true
      },
      "cors": {
        "version": "^2.8.5",
        "description": "CORS middleware",
        "required": true
      },
      "express-session": {
        "version": "^1.17.3",
        "description": "Session middleware",
        "required": false,
        "usage": "User authentication and sessions"
      }
    },
    "utilities": {
      "date-fns": {
        "version": "^2.30.0",
        "description": "Date utility library",
        "required": false,
        "usage": "Date formatting and manipulation"
      }
    },
    "database": {
      "drizzle-orm": {
        "version": "^0.29.0",
        "description": "TypeScript ORM",
        "required": false,
        "usage": "Database queries and migrations"
      },
      "@neondatabase/serverless": {
        "version": "^0.6.0",
        "description": "Neon database client",
        "required": false,
        "usage": "PostgreSQL connection"
      },
      "postgres": {
        "version": "^3.4.0",
        "description": "PostgreSQL client",
        "required": false,
        "alternative": true
      }
    },
    "authentication": {
      "bcryptjs": {
        "version": "^2.4.3",
        "description": "Password hashing",
        "required": false,
        "usage": "User authentication"
      },
      "jsonwebtoken": {
        "version": "^9.0.0",
        "description": "JWT token generation",
        "required": false,
        "usage": "Token-based authentication"
      }
    },
    "fileHandling": {
      "multer": {
        "version": "^1.4.5-lts.1",
        "description": "File upload middleware",
        "required": false,
        "usage": "Note attachments"
      },
      "sharp": {
        "version": "^0.33.0",
        "description": "Image processing",
        "required": false,
        "usage": "Image thumbnails for attachments"
      }
    },
    "markdown": {
      "react-markdown": {
        "version": "^9.0.0",
        "description": "Markdown renderer",
        "required": false,
        "usage": "Markdown note preview"
      },
      "rehype-highlight": {
        "version": "^7.0.0",
        "description": "Syntax highlighting",
        "required": false,
        "usage": "Code highlighting in markdown"
      },
      "remark-gfm": {
        "version": "^4.0.0",
        "description": "GitHub Flavored Markdown",
        "required": false,
        "usage": "Extended markdown syntax"
      }
    },
    "development": {
      "typescript": {
        "version": "^5.3.0",
        "description": "TypeScript compiler",
        "required": true
      },
      "vite": {
        "version": "^5.0.0",
        "description": "Build tool",
        "required": true
      },
      "@vitejs/plugin-react": {
        "version": "^4.0.0",
        "description": "Vite React plugin",
        "required": true
      },
      "eslint": {
        "version": "^8.50.0",
        "description": "Linter",
        "required": false
      },
      "jest": {
        "version": "^29.7.0",
        "description": "Testing framework",
        "required": false
      },
      "@testing-library/react": {
        "version": "^14.0.0",
        "description": "React testing utilities",
        "required": false
      }
    }
  },
  "minimumRequirements": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "react": ">=18.0.0"
  },
  "installation": {
    "minimal": [
      "react",
      "react-dom",
      "@tanstack/react-query",
      "lucide-react",
      "clsx",
      "tailwind-merge",
      "zod"
    ],
    "recommended": [
      "react",
      "react-dom",
      "@tanstack/react-query",
      "lucide-react",
      "clsx",
      "tailwind-merge",
      "zod",
      "express",
      "cors",
      "date-fns",
      "tailwindcss"
    ],
    "full": [
      "All dependencies listed above"
    ]
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "notes": {
    "database": "Choose either drizzle-orm with @neondatabase/serverless OR postgres package, not both",
    "authentication": "Optional - only needed if implementing user authentication",
    "markdown": "Optional - only needed for markdown note support",
    "fileHandling": "Optional - only needed for file attachments"
  }
}