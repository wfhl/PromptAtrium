      "icons": [{ "src": "/assets/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "View Templates",
      "short_name": "Templates",
      "description": "Browse prompt templates",
      "url": "/quick-prompt?view=templates",
      "icons": [{ "src": "/assets/icon-96x96.png", "sizes": "96x96" }]
