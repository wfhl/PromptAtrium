  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/quick-prompt/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/png", "image/jpeg", "image/webp"]
        }
      ]
    }
  },
  "features": [
    "prompt-generation",
    "character-presets",
    "image-analysis",
    "social-captions",
    "template-engine",
    "ai-enhancement",
    "offline-support"
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  }
